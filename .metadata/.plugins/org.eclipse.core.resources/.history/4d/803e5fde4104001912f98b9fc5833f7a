package it.linksmt.teamshare.repository;

import java.util.List;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;
import org.springframework.stereotype.Repository;

import it.linksmt.teamshare.entities.Comment;

@Repository
public interface CommentRepository extends CrudRepository<Comment, Integer> {
	@Query("SELECT testo, data_pubblicazione, id_utente FROM tb_commento WHERE tb_commento.id_post = ?1 ")
	List<Comment> findByIdPost(Integer idPost);
	
}
