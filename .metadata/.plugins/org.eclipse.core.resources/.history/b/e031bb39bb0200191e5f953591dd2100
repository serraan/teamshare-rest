package it.linksmt.converter;

import java.util.List;

import org.mapstruct.Mapping;
import org.mapstruct.Mappings;
import org.mapstruct.factory.Mappers;

import it.linksmt.teamshare.business.dtos.ActivityDto;
import it.linksmt.teamshare.business.dtos.PostDto;
import it.linksmt.teamshare.business.request.PostRequestDto;
import it.linksmt.teamshare.entities.Activity;
import it.linksmt.teamshare.entities.Post;

public interface PostConverter {

	PostConverter MAPPER = Mappers.getMapper(PostConverter.class);

	List<PostDto> toListaPostDTOResponse(Iterable<P> allActivities);

	 @Mapping(target = "idUtente", source = "utenteCreatore.idUtente")
	 PostDto toPostDto(Post post);

	@Mappings({ @Mapping(target = "utenteCreatore.idUtente", source = "idUtenteCreatore"),
	@Mapping(target = "utenteAssegnatario.idUtente", source = "idUtenteAssegnatario")})
	Activity toActivity(ActivityDto activityDto);

	@Mapping(target = "idUtente", source = "utenteCreatore.idUtente")
	 PostRequestDto toPostRequestDto(Post post);

}
}
